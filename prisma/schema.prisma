generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id     String @id @default(cuid())
  name   String
  logo   String
  dishes Dish[]
}

model Dish {
  id           String     @id @default(cuid())
  name         String
  description  String
  price        Int
  image        String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}
