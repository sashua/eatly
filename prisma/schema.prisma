generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id String @id @default(cuid())

  name        String
  description String
  logo        String
  image       String

  dishes Dish[]
  orders Order[]
}

model Dish {
  id String @id @default(cuid())

  restaurantId String
  name         String
  description  String
  image        String
  price        Int

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  orders     OrderDish[]
}

model Order {
  id String @id @default(cuid())

  customerName    String
  customerEmail   String
  deliveryAddress String

  restaurantId      String
  restaurantAddress String
  deliveryCost      Int
  totalSum          Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  restaurant Restaurant  @relation(fields: [restaurantId], references: [id])
  dishes     OrderDish[]
}

model OrderDish {
  orderId String
  dishId  String

  price Int
  qty   Int

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  dish  Dish  @relation(fields: [dishId], references: [id])

  @@id([orderId, dishId])
}
